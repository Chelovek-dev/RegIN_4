<Page x:Class="RegIN_Bulatov_Perevozshikova.Pages.Regin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:RegIN_Bulatov_Perevozshikova.Pages"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d"
      TextElement.Foreground="{DynamicResource MaterialDesignBody}"
      TextElement.FontWeight="Regular"
      TextElement.FontSize="13"
      TextOptions.TextFormattingMode="Ideal"
      TextOptions.TextRenderingMode="Auto"
      Background="{DynamicResource MaterialDesignPaper}"
      FontFamily="{DynamicResource MaterialDesignFont}"
      d:DesignHeight="450"
      d:DesignWidth="800"
      Title="RegIn">
    <Grid>
        <materialDesign:Card
            Height="480"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Width="308">
            <Grid>
                <Image
                    x:Name="TUser"
                    HorizontalAlignment="Center"
                    Height="100"
                    Margin="32,32,32,0"
                    VerticalAlignment="Top"
                    Width="100"
                    Source="/RegIN_Bulatov_Perevozshikova;component/Images/ic-user.png"
                    MouseDown="SelectImage">
                    <Image.Clip>
                        <EllipseGeometry
                            RadiusX="50"
                            RadiusY="50"
                            Center="50,50"/>
                    </Image.Clip>
                </Image>
                <Label
                    x:Name="IUsername"
                    Margin="18,137,18,0"
                    HorizontalAlignment="Center"
                    Content=""
                    VerticalAlignment="Top"/>
                <Label
                    Content="Enter login:"
                    Margin="18,161,18,0"
                    VerticalAlignment="Top"/>
                <TextBox
                    x:Name="TBLogin"
                    Height="23"
                    Margin="18,185,18,0"
                    TextWrapping="Wrap"
                    Text=""
                    VerticalAlignment="Top"
                    KeyDown="SetLogin"
                    LostFocus="SetLogin"/>
                <Label
                    Content="Enter name:"
                    Margin="18,213,18,0"
                    VerticalAlignment="Top"/>
                <TextBox
                    x:Name="TBName"
                    Height="23"
                    Margin="18,237,18,0"
                    TextWrapping="Wrap"
                    Text=""
                    VerticalAlignment="Top"
                    PreviewTextInput="SetName"/>
                <Label
                    Content="Enter password:"
                    Margin="18,265,18,0"
                    VerticalAlignment="Top"/>
                <PasswordBox
                    x:Name="TBPassword"
                    Margin="18,289,18,0"
                    VerticalAlignment="Top"
                    Height="26"
                    KeyDown="SetPassword"
                    LostFocus="SetPassword"/>
                <Label
                    Content="Confirm the password:"
                    Margin="18,320,18,0"
                    VerticalAlignment="Top"/>
                <PasswordBox
                    x:Name="TBConfirmPassword"
                    Margin="18,344,18,0"
                    VerticalAlignment="Top"
                    Height="26"
                    KeyDown="ConfirmPassword"
                    LostFocus="ConfirmPassword"/>
                <Label
                    Content="Back"
                    Margin="18,375,18,0"
                    VerticalAlignment="Top"
                    Foreground="#FF673AB7"
                    FontSize="10"
                    MouseDown="OpenLogin"/>
            </Grid>
        </materialDesign:Card>
    </Grid>
</Page>
    